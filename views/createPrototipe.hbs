<div class="jumbotron create-view">
  <div class="create-form">
    <form action="/create-prototipe" method="POST">
      
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" name="name" id="name" value="{{name}}">
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="description" id="description" rows="2">{{description}}</textarea>
      </div>

      <div class="form-row">
        <div class="col">
          <label for="min_players">min nº players</label>
          <input type="number" name="min_players" id="min_players" class="form-control" value="{{min_players}}">
        </div>
        <div class="col">
          <label for="min_players">max nº players</label>
          <input type="number" name="max_players" id="max_players" class="form-control" value="{{max_players}}">
        </div>
      </div>
    
      <div class="form-row">
        <div class="col">
          <label for="min_playtime">min playtime</label>
          <input type="number" name="min_playtime" id="min_playtime" class="form-control" value="{{min_playtime}}">
        </div>
        <div class="col">
          <label for="max_playtime">max playtime</label>
          <input type="number" name="max_playtime" id="max_playtime" class="form-control" value="{{max_playtime}}">
        </div>
      </div>
     <br>
      <div class="form-group">
        <label for="mechanisms">Mechanisms:</label>
        <input type="text" class="form-control" name="mechanisms" id="mechanisms" value="{{mechanisms}}">
      </div>
  
      <div class="form-group">
        <label for="category">Category:</label>
        <input type="text" class="form-control" name="category" id="category" value="{{category}}">
      </div>

      <div class="form-group">
        <label for="image">Image url:</label>
        <input type="text" class="form-control" name="image" id="image" value="{{image}}">
      </div>


      <div class="form-group">
        <label for="designer_notes">Design notes</label>
        <textarea class="form-control" name="designer_notes" id="designer_notes" rows="2">{{designer_notes}}</textarea>
      </div>

      <button type="submit" class="btn btn-outline-success">Save</button>
    </form>
  </div>
 </div>